{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es2015.promise",
      "dom",
      "es5"
    ]
  },
  "compileOnSave": true,
  "include": [
    "bower_components/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "bower_components/**/demo/*",
    "bower_components/**/test/*"
  ]
}