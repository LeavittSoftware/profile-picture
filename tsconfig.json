{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "types"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "bower_components/**/*.ts",
    "bower_components/polymer/types/polymer-element.d.ts",
    "bower_components/polymer-decorators/polymer-decorators.d.ts",
    "bower_components/polymer-decorators/mixins/declarative-event-listeners.d.ts",
    "lazy-import.d.ts",
    "*.ts"
  ]
}